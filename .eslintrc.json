{
	"root": true,
	"parser": "vue-eslint-parser",
	"parserOptions": {
			"parser": "@typescript-eslint/parser"
	},
	"extends": [
			"plugin:vue/strongly-recommended",
			"eslint:recommended",
			"@vue/typescript/recommended"
	],
	"plugins": ["@typescript-eslint"],
	"rules": {
			// not needed for vue 3
			"vue/no-multiple-template-root": "off"
	}
}
